@model SGMLoquinho.ApplicationServices.ViewModels.RhColaboradoresViewModel

@{
    ViewData["Title"] = "Create";
}

@using (Html.BeginForm("Create", "RhColaboradores", FormMethod.Post, new { @class = "form-vertical", enctype = "multipart/form-data" }))
{
    <div class="col-md-12">
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CPF" class="control-label"></label>
            <input asp-for="CPF" class="form-control" />
            <span asp-validation-for="CPF" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NomeCompleto" class="control-label"></label>
            <input asp-for="NomeCompleto" class="form-control" />
            <span asp-validation-for="NomeCompleto" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Usuario" class="control-label"></label>
            <input asp-for="Usuario" class="form-control" />
            <span asp-validation-for="Usuario" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DataNascimento" class="control-label"></label>
            <input asp-for="DataNascimento" class="form-control" />
            <span asp-validation-for="DataNascimento" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EmailPessoal" class="control-label"></label>
            <input asp-for="EmailPessoal" class="form-control" />
            <span asp-validation-for="EmailPessoal" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EmailProfissional" class="control-label"></label>
            <input asp-for="EmailProfissional" class="form-control" />
            <span asp-validation-for="EmailProfissional" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DataAdmissao" class="control-label"></label>
            <input asp-for="DataAdmissao" class="form-control" />
            <span asp-validation-for="DataAdmissao" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DataDemissao" class="control-label"></label>
            <input asp-for="DataDemissao" class="form-control" />
            <span asp-validation-for="DataDemissao" class="text-danger"></span>
        </div>

        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
            </label>
        </div>
        <div class="form-group">
            <input type="submit" value="Salvar" class="btn btn-primary" />
            <input type="button" value="Voltar" class="btn btn-danger" />
        </div>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
